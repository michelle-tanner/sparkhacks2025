---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
import Carousel from "../components/Carousel.astro";
import Header from "../layouts/Header.astro";
import Footer from "../layouts/Footer.astro";
---

<!-- Head and metadata for page -->
<Layout />

<body>
  <!-- Header for page -->
  <Header />

  <h2 class="banner" style="background-color: #BA2430; color: white; margin-top: 1rem; margin-bottom: 1rem" >
    10% discount for UIC students
  </h2>

  <!-- Carousel to display Thai Bowl images -->
  <Carousel />

  <!-- Location Banner -->
  <h1 class="banner">Location</h1>
  <!-- Map, Hours, Service, Contact -->
  <section style="display: grid; flex-direction: column; gap: 1.5rem; grid-template-column: 65% 35%; grid-template-row: 50% 50%; align-items: center" >
    <div style="grid-area: 1 / 1 / span 2 / span 1; border: 0; width:600; height:450" >
      <div style="overflow:hidden;resize:none;max-width:100%;width:500px;height:500px;" >
        <div id="embed-map-display" style="height:100%; width:100%;max-width:100%;" >
          <iframe style="height:100%; width:100%; border:0;" src="https://www.google.com/maps/embed/v1/place?q=thai+bowl+chicago&key=AIzaSyBFw0Qbyq9zTFTd-tUY6dZWTgaQzuU17R8" />
        </div><a class="the-googlemap-enabler" href="https://kbj9qpmy.com/bp" id="get-data-for-embed-map">Internet Provider</a >
        <style>
          #embed-map-display img.text-marker {
            max-width: none !important;
            background: none !important;
          }
          img {
            max-width: none;
          }
        </style>
      </div>
    </div>
    <div class="square" style="grid-area: 1 / 2 / span 1 / span 1">
      <h3 style="color: white">Hours of Operation:</h3>
      <p style="color: white">Monday - Sunday: 11AM - 7:30PM</p>
      <p><br /></p>
      <h3 style="color: white; font-size: medium">Service Options:</h3>
      <ul style="list-style-type:disc; color: white">
        <li style="display: inline">&#8226; Outdoor Seating</li>
        <li style="display: inline">&#8226; Take-Out</li>
        <li style="display: inline">&#8226;</li>
      </ul>
    </div>
    <div class="square" style="grid-area: 2 / 2 / span 1 / span 1">
      <h3 style="color: white">Contact Info:</h3>
      <p style="color: white">(312) 226-9129</p>
      <p style="color: white">(312) 226-5865</p>
      <p style="color: white">FAX: (312) 226-6314</p>
      <p style="color: white">1049 W Taylor St, Chicago, IL 60607</p>
    </div>
  </section>

  <!-- About Banner -->
  <h1 class="banner">About</h1>
  <section>
    <div class="text" style="display: flex; width: auto; height: auto; margin-bottom: 3rem" >
      <p style="margin: 2rem;">
        Neighborhood storefront spot serving authentic and traditional Thai
        food. <br />
        Family-owned business. <br /><br />
        Phone: (312) 226-9129 <br />
        (312) 226-5865 <br />
        FAX: (312) 226-6314 <br />
        1049 W Taylor St, Chicago, IL 60607 <br />
      </p>
      <img style="float: right; width: 40%; height: auto " class="" src="src/assets/restaurant.webp" />
    </div>
  </section>

  <!-- Footer for page -->
  <Footer />
</body>
